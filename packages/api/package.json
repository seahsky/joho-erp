{
  "name": "@joho-erp/api",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./services/xero": {
      "types": "./src/services/xero.ts",
      "import": "./src/services/xero.ts",
      "require": "./src/services/xero.ts"
    },
    "./services/r2": {
      "types": "./src/services/r2.ts",
      "import": "./src/services/r2.ts",
      "require": "./src/services/r2.ts"
    }
  },
  "typesVersions": {
    "*": {
      "services/xero": ["./src/services/xero.ts"],
      "services/r2": ["./src/services/r2.ts"]
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.943.0",
    "@aws-sdk/s3-request-presigner": "^3.943.0",
    "@clerk/nextjs": "^6.0.0",
    "@joho-erp/database": "workspace:*",
    "@joho-erp/shared": "workspace:*",
    "@trpc/server": "^11.0.0",
    "resend": "^4.0.0",
    "twilio": "^5.4.0",
    "superjson": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
