{
  "name": "joho-erp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:up:build": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:customer": "docker compose up customer-portal",
    "docker:admin": "docker compose up admin-portal",
    "docker:clean": "docker compose down -v --rmi all",
    "test:integration": "turbo run test:integration",
    "test:e2e": "pnpm --filter @joho-erp/e2e test",
    "test:e2e:headed": "pnpm --filter @joho-erp/e2e test:headed",
    "test:e2e:ui": "pnpm --filter @joho-erp/e2e test:ui",
    "test:e2e:debug": "pnpm --filter @joho-erp/e2e test:debug",
    "i18n:audit": "tsx scripts/i18n-audit.ts"
  },
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-next": "^15.0.0",
    "tsx": "^4.21.0",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "@react-email/render>react": "^19.0.0",
      "@react-email/render>react-dom": "^19.0.0"
    },
    "ignoredBuiltDependencies": [
      "@clerk/shared",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
