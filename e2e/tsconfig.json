{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@joho-erp/database": ["../packages/database/src"],
      "@joho-erp/shared": ["../packages/shared/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
